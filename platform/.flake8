[flake8]
max-line-length = 88
extend-ignore = 
    E203,
    W503,
    F401,
    F841,
    E501,
    F821,
    E722,
    F541
exclude = 
    .git,
    __pycache__,
    .venv,
    .pytest_cache,
    .mypy_cache,
    build,
    dist,
    *.egg-info
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F841
    src/platform_mcp/tools.py:F821
    src/verification/*:F841