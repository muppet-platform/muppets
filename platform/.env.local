# Local Development Environment Configuration
# Copy this file to .env and customize as needed

# Debug mode
DEBUG=true
LOG_LEVEL=DEBUG

# AWS LocalStack Configuration
AWS_ENDPOINT_URL=http://localhost:4566
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_DEFAULT_REGION=us-west-2

# GitHub Configuration (set your actual token)
# GITHUB_TOKEN=your_github_token_here
GITHUB_ORG=muppet-platform

# Platform Configuration
PLATFORM_NAME=platform-service
PLATFORM_VERSION=0.1.0
PLATFORM_PORT=8000

# Database/Storage Configuration
S3_BUCKET_ARTIFACTS=muppet-platform-artifacts
S3_BUCKET_TERRAFORM_STATE=muppet-platform-terraform-state

# ECS Configuration
ECS_CLUSTER_NAME=muppet-platform-local

# Monitoring Configuration
CLOUDWATCH_LOG_GROUP=/muppet-platform/platform
LOG_RETENTION_DAYS=7