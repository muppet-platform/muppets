{
  "mcpServers": {
    "muppet-platform-production": {
      "command": "python3",
      "args": ["mcp_http_bridge.py", "https://muppet-platform.s3u.dev/mcp"],
      "cwd": "./platform",
      "env": {
        "PYTHONPATH": "."
      },
      "disabled": false,
      "autoApprove": [
        "get_muppet_status",
        "list_muppets", 
        "list_templates",
        "get_muppet_logs",
        "list_steering_docs",
        "create_muppet"
      ]
    }
  }
}